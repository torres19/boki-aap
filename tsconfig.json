{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./build"
  },
  "include": [
    "src/server/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/web"
  ]
}

