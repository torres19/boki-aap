{
  "name": "boki-app",
  "version": "1.0.0",
  "description": "A web application for learning bookkeeping journal entries.",
  "main": "build/server/index.js",
  "scripts": {
    "build:js": "tsc --project tsconfig.web.json",
    "build:css": "tailwindcss -i ./src/web/style.css -o ./public/styles.css --minify",
    "build:server": "tsc --project tsconfig.json",
    "build": "npm run build:server && npm run build:js && npm run build:css",
    "start": "node build/server/index.js",
    "dev:server": "ts-node-dev --respawn --transpile-only src/server/index.ts",
    "watch:js": "tsc --project tsconfig.web.json --watch",
    "watch:css": "tailwindcss -i ./src/web/style.css -o ./public/styles.css --watch",
    "dev": "concurrently \"npm:watch:*\" \"npm:dev:server\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.0",
    "@types/node": "^20.14.9",
    "@types/pg": "^8.11.6",
    "bcrypt": "^5.1.1",
    "connect-pg-simple": "^9.0.1",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-session": "^1.18.0",
    "pg": "^8.12.0",
    "stripe": "^16.1.0",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.5.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "ts-node-dev": "^2.0.0"
  }
}

